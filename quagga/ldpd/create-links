#!/bin/sh

DEFSRC=/home/jleu/clients/ldp-portable
if [ "x${1}" = "x" ]; then
    SRC=${DEFSRC}
else
    SRC=${1}
fi

[ -d "${SRC}" ] || {
    echo $"$0: directory not found: ${1}" >&2
    echo $"Usage: $0 [<direcory>] (default is ${DEFSRC})" >&2
    exit 1
}

